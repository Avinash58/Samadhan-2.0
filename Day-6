import React from 'react';

// ProfileCard component demonstrates the use of props
// It takes name, title, imageUrl, and description as props
const ProfileCard = ({ name, title, imageUrl, description }) => {
  return (
    <div className="bg-white rounded-xl shadow-lg p-6 m-4 flex flex-col items-center max-w-sm w-full md:w-1/2 lg:w-1/3 xl:w-1/4 transition-transform transform hover:scale-105">
      {/* Profile Image */}
      <img
        src={imageUrl || "https://placehold.co/120x120/a8dadc/ffffff?text=No+Image"} // Fallback image
        alt={`${name}'s profile`}
        className="w-32 h-32 rounded-full object-cover border-4 border-blue-500 mb-4 shadow-md"
        onError={(e) => { e.target.onerror = null; e.target.src="https://placehold.co/120x120/a8dadc/ffffff?text=No+Image" }} // Image error fallback
      />
      {/* Name */}
      <h2 className="text-2xl font-bold text-gray-800 mb-2 text-center">{name}</h2>
      {/* Title/Occupation */}
      <p className="text-blue-600 text-lg font-semibold mb-3 text-center">{title}</p>
      {/* Description */}
      <p className="text-gray-600 text-center leading-relaxed">{description}</p>
    </div>
  );
};

// The main App component where ProfileCard components are rendered
// This demonstrates passing different props to multiple instances of the same component
const App = () => {
  return (
    <div className="min-h-screen bg-gradient-to-r from-blue-100 to-indigo-200 flex flex-col items-center justify-center p-4">
      <h1 className="text-4xl md:text-5xl font-extrabold text-gray-900 mb-8 text-center drop-shadow-lg">
        Our Team Profiles
      </h1>
      <div className="flex flex-wrap justify-center w-full">
        {/* Example Profile Card 1 */}
        <ProfileCard
          name="Avinash Raj "
          title="Software Engineer"
          imageUrl="https://placehold.co/120x120/4a90e2/ffffff?text=AR"
          description="Passionate about full-stack development and creating seamless user experiences. Specializes in React and Node.js."
        />

        {/* Example Profile Card 2 */}
        <ProfileCard
          name="Aditya Yadav"
          title="Product Manager"
          imageUrl="https://placehold.co/120x120/50e3c2/ffffff?text=AY"
          description="Drives product strategy and innovation, focusing on user needs and market trends. Loves agile methodologies."
        />

        {/* Example Profile Card 3 */}
        <ProfileCard
          name="Aryan Kumar"
          title="UX/UI Designer"
          imageUrl="https://placehold.co/120x120/f5a623/ffffff?text=AK"
          description="Crafts intuitive and beautiful interfaces, bringing user-centered design principles to every project."
        />

        {/* Example Profile Card 4 (demonstrating image fallback) */}
        <ProfileCard
          name="Sachin "
          title="Data Scientist"
          // imageUrl="invalid-url" // This would trigger the fallback
          description="Excels in data analysis, machine learning, and building predictive models to drive insights."
        />
      </div>
    </div>
  );
};

export default App;
